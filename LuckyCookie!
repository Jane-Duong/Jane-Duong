#include <iostream>
#include <cstdio>

int main() {
  srand(time(NULL)); 
  int cookieNum = std::rand() % 50; 
  std::cout << "Hi! Welcome to your lucky message!\n"; 
  std::cout << "Please enter a number that you like: \n"; 
  std::cin >> cookieNum; 
  if (cookieNum == 10){
    std::cout << "Don't pursue happiness - create it.\n"; 
  }
  else if (cookieNum == 23){ 
    std::cout << "All things are difficult before they are easy.\n"; 
  }
  else if (cookieNum == 45) { 
    std::cout << "The early bird gets the worm, but the second mouse gets the cheese.\n"; 
  }
  else if (cookieNum == 0) { 
    std::cout << "Someone in your life needs a letter from you.\n"; 
  }
  else if (cookieNum == 31) { 
    std::cout << "The fortune you search for is in another cookie.\n"; 
  }
  else if (cookieNum == 12) { 
    std::cout << "Help! I'm being held prisioner in a Chinese bakery!\n"; 
  }
  else { 
    std::cout << "The fortune you search for is in another cookie.\n"; 
    std::cout << "Lucky numbe: 10 23 45 0 31 12 \n"; 
  }
  return 0; 
}
